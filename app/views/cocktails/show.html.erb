<div class="container">
  <div class="name">
    <%= @cocktail.name %>
  </div>
  <div class="ingredients">
    <% @cocktail.doses.each do |dose| %>
      <li><%= "#{dose.description} of #{dose.ingredient.name}" %></li>
    <% end %>
  </div>
  <%= link_to "new dose", new_cocktail_dose_path(@cocktail), {class: 'add-dose-btn'} %>
</div>
